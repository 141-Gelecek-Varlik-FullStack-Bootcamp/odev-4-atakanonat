@using Comm.Model
@using Comm.Model.Product
@{
    var Products = (List<Common<Product>>)ViewBag.Products;
    ViewData["title"] = "Product List";
}

<body>
    <h1>Product List</h1>
    <br />
    <form method="get">
        <div>
            <label for="searchString">Search Product:</label>
            <input type="text" name="searchString" id="searchString">
            <input type="submit" value="Search" />
        </div>
    </form>
    <br />
    @foreach (var product in Products)
    {
        <ul>
            <p><b>Product: </b>@product.Entity.Name</p>
            <li>
                <p>Description:@product.Entity.Description</p>
            </li>
            <li>
                <p>Stock Count:@product.Entity.Stock</p>
            </li>
            <li>
                <p>Price:@product.Entity.Price</p>
            </li>
        </ul>
        <br />
    }
</body>